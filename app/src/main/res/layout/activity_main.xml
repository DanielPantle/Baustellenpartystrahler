<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <Button
        android:id="@+id/buttonMode0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modus Langweilig" />

    <Button
        android:id="@+id/buttonMode1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modus Kreis" />

    <Button
        android:id="@+id/buttonMode2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modus Baustelle" />

    <Button
        android:id="@+id/buttonFColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vordergrundfarbe auswählen" />

    <Button
        android:id="@+id/buttonBColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hintergrundfarbe auswählen" />

    <SeekBar
        android:id="@+id/seekBarSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="3000"
        android:min="25"
        android:padding="20dp"
        android:progress="50" />

    <SeekBar
        android:id="@+id/seekBarBrightness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="255"
        android:min="0"
        android:padding="20dp"
        android:progress="255" />

    <SeekBar
        android:id="@+id/seekBarSpeed2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="3000"
        android:padding="20dp"
        android:min="25"
        android:progress="50" />

</LinearLayout>