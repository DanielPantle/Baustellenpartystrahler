<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:background="#018577"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonlangweilig"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|left"
            android:layout_weight="1"
            android:backgroundTintMode="src_in"
            android:gravity="center|center_horizontal"
            android:text="Langweilig" />

        <Button
            android:id="@+id/buttonKreis"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|left"
            android:layout_weight="1"
            android:gravity="center|center_horizontal"
            android:text="Kreis" />

        <Button
            android:id="@+id/buttonBaustelle"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_horizontal"
            android:layout_weight="1"
            android:gravity="center|center_horizontal"
            android:text="Baustelle" />

        <Button
            android:id="@+id/buttonBlinken"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_horizontal"
            android:layout_weight="1"
            android:gravity="center|center_horizontal"
            android:text="Blinken" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonFColor"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTintMode="src_over"
            android:text="1. Farbe"
            android:textColor="#646464" />

        <Button
            android:id="@+id/buttonBColor"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTintMode="src_over"
            android:text="2. Farbe"
            android:textColor="#646464"
            android:visibility="gone" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTintMode="src_over"
            android:text="Bunt"
            android:textColor="#646464"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textbright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Helligkeit" />

        <SeekBar
            android:id="@+id/seekBarBrightness"
            style="@style/Widget.AppCompat.SeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255"
            android:min="0"
            android:padding="20dp"
            android:progress="255"
            android:scrollbarSize="4dp" />

        <TextView
            android:id="@+id/textspeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gewindigkeit Eingeschaltet" />

        <SeekBar
            android:id="@+id/seekBarSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="3000"
            android:min="25"
            android:padding="20dp"
            android:progress="150"
            android:scrollbarSize="4dp" />

        <TextView
            android:id="@+id/textspeed2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Geschwindigkeit Ausgeschaltet"
            android:visibility="invisible" />

        <SeekBar
            android:id="@+id/seekBarSpeed2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="3000"
            android:min="25"
            android:padding="20dp"
            android:progress="50"
            android:visibility="invisible" />
    </LinearLayout>

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:text="Willkommen"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:autoSizeMaxTextSize="50px"
        app:autoSizeMinTextSize="10px"
        app:autoSizeTextType="uniform" />

</LinearLayout>